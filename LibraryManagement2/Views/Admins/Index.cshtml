@* 
    View cho trang Admin Dashboard
    - Title: Admin Dashboard
    - Hiển thị thông tin đăng nhập và menu điều hướng
    - Yêu cầu: Session "UserRole" phải là "Admin"
*@
@{
    ViewData["Title"] = "Admin Dashboard";
}

@* Kiểm tra vai trò và hiển thị thông báo *@
@{
    var role = Context.Session.GetString("UserRole");
    if (string.IsNullOrEmpty(role) || role != "Admin")
    {
        <div class="alert alert-danger">Bạn không có quyền truy cập trang này. Vui lòng đăng nhập với vai trò Admin!</div>
        return;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* Thêm CSS Bootstrap (nếu đã cấu hình) để giao diện đẹp hơn *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Library Management</a>
                <div class="navbar-nav">
                    <a class="nav-link" asp-action="Index" asp-controller="Admins">Trang Chủ</a>
                    <a class="nav-link" asp-action="CreateStudent" asp-controller="Admins">Thêm Sinh Viên</a>
                    <a class="nav-link" asp-action="CreateLibrarian" asp-controller="Admins">Thêm Thủ Thư</a>
                    <a class="nav-link" asp-action="CheckDueDates" asp-controller="Admins">Kiểm Tra Hạn Trả</a>
                    <a class="nav-link" asp-action="Logout" asp-controller="Account">Đăng Xuất</a>
                </div>
            </nav>
        </header>

        <main role="main" class="mt-3">
            <h2>Admin Dashboard</h2>
            <p>Xin chào, bạn đang đăng nhập với quyền <strong>Admin</strong>.</p>

            @* Hiển thị thông tin hệ thống (dựa trên dữ liệu từ context nếu cần) *@
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thông Tin Hệ Thống</h5>
                    <p class="card-text">Thời gian hiện tại: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    <p class="card-text">Số lượng sinh viên: @ViewBag.StudentCount</p>
                    <p class="card-text">Số lượng thủ thư: @ViewBag.LibrarianCount</p>
                    <p class="card-text">Số sách mượn: @ViewBag.BorrowedCount</p>
                </div>
            </div>
        </main>

        <footer class="footer mt-5">
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year - LibraryManagement2</p>
            </div>
        </footer>
    </div>

    @* Thêm script Bootstrap (nếu đã cấu hình) *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>