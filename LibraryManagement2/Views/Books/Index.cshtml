@model IEnumerable<LibraryManagement2.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Sách</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Sách Mới</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Tác Giả
            </th>
            <th>
                Thể Loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<Book>())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <a href="@item.ImagePath" target="_blank">
                            <img src="@item.ImagePath" alt="@item.Title" style="max-width: 100px; max-height: 150px;" />
                        </a>
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearPublished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @(item.Author != null ? item.Author.AuthorId.ToString() : "Chưa có tác giả")
                </td>
                <td>
                    @(item.Cate != null ? item.Cate.CateId.ToString() : "Chưa có thể loại")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>