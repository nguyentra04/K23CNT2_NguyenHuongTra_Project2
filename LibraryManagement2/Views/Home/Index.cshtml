
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Chào Mừng Đến Với Hệ Thống Quản Lý Thư Viện</h1>

    @* Hiển thị thông tin động từ controller (nếu có) *@
   
    <p>Thời gian hiện tại: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>

    @* Nút điều hướng dựa trên vai trò (nếu đã đăng nhập) *@
    @{
        var role = Context.Session?.GetString("UserRole");
        if (!string.IsNullOrEmpty(role))
        {
            <div class="mt-4">
                <h4>Chức Năng Dành Cho Bạn</h4>
                @if (role == "Admin")
                {
                    <a asp-controller="Admins" asp-action="Index" class="btn btn-primary m-1">Đi Đến Dashboard Admin</a>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-info m-1">Quản Lý Sách</a>
                }
                else if (role == "Student")
                {
                    <a asp-controller="Students" asp-action="Index" class="btn btn-success m-1">Xem Thông Tin Cá Nhân</a>
                }
                else if (role == "Librarian")
                {
                    <a asp-controller="Librarian" asp-action="Index" class="btn btn-warning m-1">Quản Lý Mượn Trả</a>
                }
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger m-1">Đăng Xuất</a>
            </div>
        }
        else
        {
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Đăng Nhập</a>
            </div>
        }
    }
</div>