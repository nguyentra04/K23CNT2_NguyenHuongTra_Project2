
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagement2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagement2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="_Navbar" />
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info mt-3" role="alert">
                    @TempData["Message"]
                </div>
            }
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - LibraryManagement2 |
            <a href="/Home/Privacy">Chính Sách Bảo Mật</a> |
            Liên hệ: <a href="mailto:support@librarymanagement.com">support@librarymanagement.com</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>