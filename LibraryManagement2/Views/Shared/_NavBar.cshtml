@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            LibraryManagement2
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Chính Sách Bảo Mật</a>
                </li>

                @{
                    var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
                    if (!string.IsNullOrEmpty(role))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Quản Lý
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if (role == "Admin")
                                {
                                    <li><a class="dropdown-item" asp-controller="Admins" asp-action="Index">Admin Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Quản Lý Sách</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Librarians" asp-action="Index">Quản Lý Thủ Thư</a></li>
                                }
                                else if (role == "Librarian")
                                {
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Index">Librarian Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Borrowed" asp-action="Index">Quản Lý Mượn Trả</a></li>
                                }
                                else if (role == "Student")
                                {
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Student Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Borrowed" asp-action="Index">Sách Đã Mượn</a></li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>

            <ul class="navbar-nav">
                @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserRole")))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link text-dark">Xin chào, @HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "Người dùng"!</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Đăng Xuất</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>