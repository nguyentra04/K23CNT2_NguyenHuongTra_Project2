@{
    ViewData["Title"] = "Trang Quản Lý Thủ Thư";
}

<div class="container mt-5">
    <h2 class="mb-4">Trang Quản Lý Thủ Thư</h2>

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Tổng Sách</h5>
                    <h2>@ViewBag.TotalBooks</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Đơn Mượn Chờ Duyệt</h5>
                    <h2>@ViewBag.PendingBorrows</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu chức năng -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Duyệt Đơn Mượn</h5>
                    <a asp-action="Index" asp-controller="Borrowed" class="btn btn-primary w-100">Xem Đơn</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Tình Trạng Sách</h5>
                    <a asp-action="ManageBooks" asp-controller="Librarian" class="btn btn-primary w-100">Xem Sách</a>
                </div>
            </div>
        </div>
    </div>
</div>