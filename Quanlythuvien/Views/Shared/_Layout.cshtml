@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Hệ thống Quản lý Thư viện - Quản lý sách, mượn trả và thông tin người dùng hiệu quả." />
    <meta name="keywords" content="quản lý thư viện, mượn sách, trả sách, admin, thủ thư, sinh viên" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Thư Viện</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          crossorigin="anonymous" />

    <!-- Section CSS riêng của từng trang -->
    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
        }

        /* Navbar */
        .navbar {
            background-color: #2c3e50;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: #ecf0f1 !important;
            font-size: 1.6rem;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

            .navbar-brand:hover {
                color: #bdc3c7 !important;
            }

        .nav-link {
            color: #ecf0f1 !important;
            font-size: 1rem;
            transition: color .3s;
        }

            .nav-link:hover, .nav-link.active {
                color: #3498db !important;
            }

        /* Dropdown */
        .dropdown-menu {
            background-color: #34495e;
            transition: all .3s ease-in-out;
        }

        .dropdown-item {
            color: #ecf0f1 !important;
        }

            .dropdown-item:hover {
                background-color: #3498db;
                color: #fff !important;
            }

        /* Search bar */
        .search-bar {
            max-width: 280px;
        }

        .btn-custom {
            background-color: #3498db;
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #2980b9;
                color: #fff;
            }

        /* Main content */
        .main-content {
            min-height: 70vh;
            padding: 20px 0;
        }

        /* Footer */
        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 15px 0;
            margin-top: 20px;
        }

            footer a {
                color: #ecf0f1;
                text-decoration: none;
            }

                footer a:hover {
                    color: #3498db;
                }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-book"></i> Quản Lý Thư Viện
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")"
                           asp-controller="Categories" asp-action="Index">Thể Loại</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Authors" ? "active" : "")"
                           asp-controller="Authors" asp-action="Index">Tác Giả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Introduce" ? "active" : "")"
                           asp-controller="Home" asp-action="Introduce">Giới Thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                           asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                           asp-controller="Home" asp-action="Privacy">Bảo Mật</a>
                    </li>

                    @if (HttpContextAccessor.HttpContext?.Session.GetString("UserRole") == "Admin")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Quản Lý Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Admins" asp-action="Index">Quản Lý Admin</a></li>
                                <li><a class="dropdown-item" asp-controller="Librarians" asp-action="Index">Quản Lý Thủ Thư</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Quản Lý Sinh Viên</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Quản Lý Sách</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Create">Thêm Thể Loại</a></li>
                                <li><a class="dropdown-item" asp-controller="Authors" asp-action="Create">Thêm Tác Giả</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- Search -->
                <form asp-controller="Home" asp-action="Search" method="get" class="d-flex me-3">
                    <input class="form-control search-bar me-2" type="search" name="query"
                           placeholder="Tìm kiếm sách..." aria-label="Search"
                           value="@(ViewBag.SearchQuery ?? "")" />
                    <button class="btn btn-custom" type="submit"><i class="fas fa-search"></i></button>
                </form>

                <!-- User Menu -->
                <ul class="navbar-nav">
                    @{
                        var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
                        var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
                        string ctrl = role switch
                        {
                            "Admin" => "Admins",
                            "Librarian" => "Librarians",
                            _ => "Students"
                        };
                    }

                    @if (!string.IsNullOrEmpty(role))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Xin chào, @username</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng Xuất</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == ctrl ? "active" : "")"
                               asp-controller="@ctrl" asp-action="Index">Quản Lý</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Message"]</div>
            }

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
            }

            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <p>
            &copy; @DateTime.Now.Year - Quản Lý Thư Viện |
            <a href="@Url.Action("Privacy", "Home")">Chính Sách Bảo Mật</a> |
            <a href="@Url.Action("Contact", "Home")">Liên Hệ</a>
        </p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
