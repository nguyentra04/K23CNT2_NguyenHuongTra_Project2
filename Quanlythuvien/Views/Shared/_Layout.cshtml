@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Hệ thống Quản lý Thư viện - Quản lý sách, mượn trả và thông tin người dùng hiệu quả." />
    <meta name="keywords" content="quản lý thư viện, mượn sách, trả sách, admin, thủ thư, sinh viên" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Thư Viện</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
        }

        /* Navbar */
        .navbar {
            background-color: #2c3e50;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #ecf0f1 !important;
            font-size: 1.8rem;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

            .navbar-brand:hover {
                color: #bdc3c7 !important;
            }

        .nav-link {
            color: #ecf0f1 !important;
            font-size: 1.1rem;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #3498db !important;
            }

            .nav-link.active {
                color: #3498db !important;
                font-weight: bold;
            }

        .search-bar {
            max-width: 300px;
            margin-right: 10px;
        }

        .btn-custom {
            background-color: #3498db;
            color: #fff;
            border: none;
            transition: background-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #2980b9;
                color: #fff;
            }

        .main-content {
            min-height: 70vh;
            padding: 20px 0;
        }

        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px 0;
            margin-top: 20px;
        }

            footer a {
                color: #ecf0f1;
                text-decoration: none;
            }

                footer a:hover {
                    color: #3498db;
                }

        .dropdown-menu {
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
            pointer-events: none;
        }

            .dropdown-menu.show {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
            }

        .dropdown-toggle::after {
            transition: transform 0.3s ease-in-out;
        }

        .dropdown-toggle:hover::after {
            transform: rotate(180deg);
        }

        .dropdown-menu {
            background-color: #34495e;
        }

        .dropdown-item {
            color: #ecf0f1 !important;
        }

            .dropdown-item:hover {
                background-color: #3498db;
                color: #fff !important;
            }

        .admin-menu .nav-link {
            position: relative;
        }

            .admin-menu .nav-link::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background-color: #3498db;
                transition: width 0.3s;
            }

            .admin-menu .nav-link:hover::after {
                width: 100%;
            }
    </style>
</head>
<body>
    <!-- Header với Navbar và Search Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-book"></i> Quản Lý Thư Viện
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")" asp-controller="Category" asp-action="Index">Thể Loại</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Author" ? "active" : "")" asp-controller="Author" asp-action="Index">Tác Giả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Introduce" ? "active" : "")" asp-controller="Home" asp-action="Introduce">Giới Thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy">Bảo Mật</a>
                    </li>
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserRole")) && HttpContextAccessor.HttpContext?.Session.GetString("UserRole") == "Admin")
                    {
                        <li class="nav-item admin-menu dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Quản Lý Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Admins" asp-action="Index">Quản Lý Admin</a></li>
                                <li><a class="dropdown-item" asp-controller="Librarians" asp-action="Index">Quản Lý Thủ Thư</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Quản Lý Sinh Viên</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Quản Lý Sách</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Create">Thêm Thể Loại</a></li>
                                <li><a class="dropdown-item" asp-controller="Author" asp-action="Create">Thêm Tác Giả</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <form asp-controller="Home" asp-action="Search" method="get" class="d-flex me-3">
                    <input class="form-control search-bar me-2" type="search" name="query" placeholder="Tìm kiếm sách..." aria-label="Search" value="@(ViewBag.SearchQuery ?? "")" />
                    <button class="btn btn-custom" type="submit"><i class="fas fa-search"></i></button>
                </form>
                <ul class="navbar-nav ms-3">
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserRole")))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Xin chào, @HttpContextAccessor.HttpContext?.Session.GetString("Username")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng Xuất</a>
                        </li>
                        @{
                            var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
                            var ctrl = role == "Admin" ? "Admins" : (role == "Librarian" ? "Librarians" : "Students");
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == ctrl ? "active" : "")" asp-controller="@ctrl" asp-action="Index">Quản Lý</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            @if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
            {
                <div class="alert alert-success text-center">@TempData["Message"]</div>
            }
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
            }
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - Quản Lý Thư Viện | <a href="@Url.Action("Privacy", "Home")" class="text-white">Chính Sách Bảo Mật</a> | <a href="@Url.Action("Contact", "Home")" class="text-white">Liên Hệ</a></p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76R4uFJqJoru7zLNhQ==" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>